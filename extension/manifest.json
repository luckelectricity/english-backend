{
    "manifest_version": 3,
    "name": "English Learning Assistant",
    "version": "1.0.0",
    "description": "Highlight learning words and translate text on any webpage.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://api.166211.xyz/*"
    ]
}